general {
  interval = 1
  markup = "pango"
}

order += "ethernet enp6s0"
order += "ethernet enp0s31f6"
order += "ethernet enp0s20f0u1c4i2"
order += "wireless wlp4s0"
order += "wireless wlp7s0"
order += "wireless wlan0"
order += "tztime net_utilization"
order += "ipv6"
order += "cpu_usage"
order += "battery all"
order += "battery 0"
order += "battery 1"
order += "volume icon"
order += "volume master"
order += "tztime sf"
order += "tztime london"
order += "tztime local"

ethernet enp6s0 {
  format_up = " ⩫ %ip "
  format_down = ""
}

ethernet enp0s31f6 {
  format_up = " ⩫ %ip "
  format_down = ""
}

ethernet enp0s20f0u1c4i2 {
  format_up = " 📱 %ip "
  format_down = ""
}

wireless wlp4s0 {
  format_up = " ≋ %essid %bitrate %ip "
  format_down = ""
}

wireless wlp7s0 {
  format_up = " ≋ %essid %bitrate %ip "
  format_down = ""
}

wireless wlan0 {
  format_up = " ≋ %essid %bitrate %ip "
  format_down = ""
}

tztime net_utilization {
  format = " REPLACE_NETWORK_UTILIZATION"
}

ipv6 {
  format_up = " ➅ %ip "
  format_down = ""
}

cpu_usage {
  format = " ⏣ %usage "
}

battery all {
  format = " ⏚ %remaining"
  format_down = ""
  hide_seconds = true
  integer_battery_capacity = true
  low_threshold = 20
  threshold_type = percentage
  separator = false
}

battery 0 {
  format = "<span size='smaller' rise='2000' foreground='#aaaaaa'>0</span>%status%percentage"
  format_down = ""
  hide_seconds = true
  integer_battery_capacity = true
  low_threshold = 20
  threshold_type = percentage
  status_bat = " ⚡ "
  status_chr = "🔌"
  status_full = " <span size='x-small' rise='5000'>●</span> "
  status_unk = " · "
  separator = false
}

battery 1 {
  format = "<span size='smaller' rise='2000' foreground='#aaaaaa'>1</span>%status%percentage "
  format_down = ""
  hide_seconds = true
  integer_battery_capacity = true
  low_threshold = 20
  threshold_type = percentage
  status_bat = " ⚡ "
  status_chr = "🔌"
  status_full = " <span size='x-small' rise='5000'>●</span> "
  status_unk = " · "
}

volume icon {
  device = "pulse"
  format = " ♪"
  format_muted = " ♪"
  separator = false
  separator_block_width = 3
}

volume master {
  device = "pulse"
  format = " %volume "
  format_muted = " OFF "
}

tztime utc {
  format = " %Z %H:%M "
  timezone = "UTC"
}

tztime sf {
  format = " %Z %H:%M "
  timezone = "America/Los_Angeles"
}

tztime london {
  format = " %Z %H:%M "
  timezone = "Europe/London"
}

tztime local {
  format = " %Y-%m-%d %H:%M "
}
