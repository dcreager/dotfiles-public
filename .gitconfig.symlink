[color]
    branch = true
    diff = true
    status = true
[core]
    commitGraph = true
    excludesfile = ~/.gitignore.global
    pager = delta-colored
[delta]
    color-only = true
    line-numbers = true
    syntax-theme = none
[delta "light"]
    light = true
[delta "dark"]
    dark = true
    minus-style = "auto #490303"
    minus-emph-style = "auto #6c3232"
    plus-style = "auto #0f3900"
    plus-emph-style = "auto #416c32"
[interactive]
    diffFilter = delta-colored
[fetch]
    writeCommitGraph = true
[gc]
    writeCommitGraph = true
[merge]
    summary = true
[push]
    default = matching
[sendemail]
    annotate = true
    confirm = auto
[init]
    defaultBranch = main

[include]
    path = ~/.gitconfig.private
[pass]
	signcommits = true
