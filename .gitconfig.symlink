[color]
    branch = true
    diff = true
    status = true
[core]
    commitGraph = true
    excludesfile = ~/.gitignore.global
    pager = less -FRSX
[fetch]
    writeCommitGraph = true
[gc]
    writeCommitGraph = true
[merge]
    summary = true
[push]
    default = matching
[sendemail]
    annotate = true
    confirm = auto
[init]
    defaultBranch = main

[include]
    path = ~/.gitconfig.private
[pass]
	signcommits = true
