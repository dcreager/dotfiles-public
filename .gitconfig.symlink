[color]
    branch = true
    diff = true
    status = true
[core]
    excludesfile = ~/.gitignore.global
    pager = less -FRSX
[merge]
    summary = true
[push]
    default = matching
[sendemail]
    annotate = true
    confirm = auto

[include]
    path = ~/.gitconfig.private
[pass]
	signcommits = true
