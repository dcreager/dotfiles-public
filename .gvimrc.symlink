set columns=175
set lines=55
syntax enable
set background=dark
let g:solarized_visibility="low"
set guioptions-=T   " no toolbar
set guioptions-=l   " no scrollbars
set guioptions-=r
set guioptions-=L
set guioptions-=R
colorscheme solarized

set keymodel=
set gcr=n:blinkon0

if has("gui_macvim")
  set guifont=Menlo:h14
  set fuopt=maxvert,maxhorz
  map <D-F> :set fu!<CR>
elseif has("gui_gtk2")
  set guifont=Menlo\ 10.5
endif
