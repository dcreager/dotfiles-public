# From https://wiki.archlinux.org/index.php/SSH_keys#GnuPG_Agent

# Start the gpg-agent if it's not already running.
if ! pgrep -x -u "${USER}" gpg-agent >/dev/null 2>&1; then
    gpg-connect-agent /bye >/dev/null 2>&1
fi

# Tell SSH to use gpg-agent
unset SSH_AGENT_PID

if [ "${gnupg_SSH_AUTH_SOCK_by:-0}" -ne $$ ]; then
    export SSH_AUTH_SOCK="${HOME}/.gnupg/S.gpg-agent.ssh"
fi

# Set GPG TTY
export GPG_TTY=$(tty)

# Always refresh the gpg-agent tty when ssh-ing somewhere from a terminal.
# (Most online sources run the gpg-connect-agent command directly here, once at
# the beginning of each login, but that doesn't work for long-running tmux
# sessions.)
ssh () {
    if tty -s; then
        gpg-connect-agent updatestartuptty /bye >/dev/null 2>&1
    fi
    /usr/bin/ssh "$@"
}
